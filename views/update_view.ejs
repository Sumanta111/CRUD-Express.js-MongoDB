  <label for="usr">Title:</label>
  <input type="text" class="form-control" id="usr" name="title" value="<%= data[0].title %>">
  </div>
  <div class="form-group">
  <label for="comment">Article Body:</label>
  <textarea class="form-control" rows="5" id="txtar" name="title_body"><%= data[0].title_body %></textarea>
  </div>
  <button type="submit" class="btn btn-md btn-primary">Update</button>
</form>
</div>
</body>
</html>